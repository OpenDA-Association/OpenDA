<xs:schema xmlns:openda="http://www.openda.org" xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.openda.org" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<xs:element name="genericNetcdfDataObject" type="openda:TNC_dataObjectConfig"/>
	<xs:complexType name="TNC_id" mixed="true">
		<xs:sequence>
			<xs:element name="template" type="xs:string" minOccurs="0"/>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="TNC_meta">
		<xs:sequence>
			<xs:element name="location" type="openda:TNC_location"/>
			<xs:element name="layer" type="openda:TNC_layer" minOccurs="0"/>
			<xs:element name="quantity" type="xs:string"/>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="TNC_layer">
		<xs:sequence>
			<xs:element name="selection" type="openda:TNC_selection"/>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="TNC_times">
		<xs:sequence>
			<xs:element name="selection" type="openda:TNC_selection"/>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="TNC_values">
		<xs:sequence>
			<xs:element name="selection" type="openda:TNC_selection"/>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="TNC_location">
		<xs:choice>
			<xs:element name="combinedSelection" type="openda:TNC_combinedSelection"/>
			<xs:element name="selection" type="openda:TNC_selection"/>
		</xs:choice>
	</xs:complexType>
	<xs:complexType name="TNC_variable">
		<xs:sequence>
			<xs:element name="dimension" type="openda:TNC_dimension" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
		<xs:attribute name="name" type="xs:string" use="required"/>
		<xs:attribute name="value" type="xs:string" use="optional"/>
	</xs:complexType>
	<xs:complexType name="TNC_dimension">
		<xs:attribute name="name" type="xs:string" use="required"/>
		<xs:attribute name="index" type="openda:TNC_indexStringType" use="required"/>
	</xs:complexType>
	<xs:complexType name="TNC_selection">
		<xs:sequence>
			<xs:element name="variable" type="openda:TNC_variable" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="TNC_dataObjectConfig">
		<xs:sequence>
			<xs:element name="arrayExchangeItem" type="openda:TNC_arrayExchangeItem" minOccurs="0" maxOccurs="unbounded"/>
			<xs:element name="timeSeriesExchangeItem" type="openda:TNC_timeSeriesExchangeItem" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="TNC_arrayExchangeItem">
		<xs:sequence>
			<xs:element name="id" type="openda:TNC_id"/>
			<xs:element name="values" type="openda:TNC_values"/>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="TNC_combinedSelection">
		<xs:sequence>
			<xs:element name="variable" type="openda:TNC_variable" maxOccurs="unbounded"/>
		</xs:sequence>
		<xs:attribute name="separator" type="xs:string" use="required"/>
	</xs:complexType>
	<xs:complexType name="TNC_timeSeriesExchangeItem">
		<xs:sequence>
			<xs:element name="id" type="openda:TNC_id"/>
			<xs:element name="meta" type="openda:TNC_meta" minOccurs="0"/>
			<xs:element name="times" type="openda:TNC_times"/>
			<xs:element name="values" type="openda:TNC_values"/>
		</xs:sequence>
	</xs:complexType>
	<xs:simpleType name="TNC_indexStringType">
		<xs:annotation>
			<xs:documentation>index (e.g. 12) or index line (e.g. 11:18) in an array</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:string">
			<xs:pattern value="(-?[0-9]+)(:-?[0-9]+)?"/>
		</xs:restriction>
	</xs:simpleType>
</xs:schema>
