solvers
{
    "p|p_rgh"
    {
        solver           GAMG;
        tolerance        1e-6;
        relTol           0.01;
        smoother         GaussSeidel;
        nPreSweeps       0;
        nPostSweeps      2;
        cacheAgglomeration on;
        agglomerator     faceAreaPair;
        nCellsInCoarsestLevel 50;
        mergeLevels      1;
        maxIter          20;
    }
    "(p|p_rgh)Final"
    {
        $p_rgh;
        relTol 0;
        maxIter          100;
    }

    "U|k|omega|T"
    {
        solver           PBiCGStab;//smoothSolver;
        preconditioner   DILU;
        tolerance        1e-8;
        relTol           0.05;
        minIter          1;
    }
}

